<!--新規会員登録ページ-->

<div class='container my-5'>

  <div class='row mb-3'>
    <div class='col-md-3 offset-md-1'>

      <h4 class='bg-dark text-white text-center'>新規会員登録</h4>

    </div>
  </div>

  <div class='row'>
    <div class='col-md-10 offset-md-1'>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render 'public/customers/shared/error_messages', resource: resource %>

        <table class='table table-borderless'>
          <tr>
            <div class='form-group'>
              <th>名前</th>
                <td>(姓)</td>
                <td><%= f.text_field :last_name, autofocus: true, placeholder: '夢野', class: 'form-control' %></td>
                <td>　　　(名)</td>
                <td><%= f.text_field :first_name, autofocus: true, placeholder: '国男', class: 'form-control' %></td>
            </div>
          </tr>

          <tr>
            <div class='form-group'>
              <th>フリガナ</th>
                <td>(セイ)</td>
                <td><%= f.text_field :last_name_kana, autofocus: true, placeholder: 'ユメノ', class: 'form-control' %></td>
                <td>　　　(メイ)</td>
                <td><%= f.text_field :first_name_kana, autofocus: true, placeholder: 'クニオ', class: 'form-control' %></td>
            </div>
          </tr>

          <tr>
            <div class='form-group'>
              <th>メールアドレス</th>
                <td></td>
                <td><%= f.email_field :email, autofocus: true, placeholder: 'sample@sample.com', class: 'form-control' %></td>
            </div>
          </tr>

          <tr>
            <div class='form-group'>
              <th>郵便番号(ハイフンなし)</th>
                <td></td>
                <td><%= f.text_field :postal_code, autofocus: true, placeholder: '0000000', class: 'form-control' %></td>
            </div>
          </tr>

          <tr>
            <div class='form-group'>
              <th>住所</th>
                <td></td>
                <td colspan='4'><%= f.text_field :address, autofocus: true, placeholder: '千葉県浦安市舞浜1-1', class: 'form-control' %></td>
            </div>
          </tr>

          <tr>
            <div class='form-group'>
              <th>電話番号(ハイフンなし)</th>
                <td></td>
                <td><%= f.text_field :telephone_number, autofocus: true, placeholder: '00000000000', class: 'form-control' %></td>
            </div>
          </tr>

          <tr>
            <div class='form-group'>
              <th>パスワード(6⽂字以上)</th>
                <td></td>
                <td><%= f.password_field :password, autocomplete: 'new-password', autofocus: true, placeholder: 'パスワード', class: 'form-control' %></td>
            </div>
          </tr>

          <tr>
            <div class='form-group'>
              <th>パスワード(確認⽤)</th>
                <td></td>
                <td><%= f.password_field :password_confirmation, autocomplete: 'new-password', autofocus: true, placeholder: 'パスワード', class: 'form-control' %></td>
            </div>
          </tr>

          <tr>
            <th></th>
            <td></td>
            <td><%= f.submit '新規登録', class:'btn btn-success w-100' %></td>
          </tr>
        </table>

      <% end %>

    </div>
  </div>

  <div class='row pt-5 mb-3'>
    <div class='col-md-4 offset-md-1'>

      <h4 class='bg-secondary text-white text-center'>既に登録済みの⽅</h4>
      <p class='text-center'><%= link_to 'こちら', new_customer_session_path %>からログインしてください。</p>

    </div>
  </div>

</div>