<!--会員ログインページ-->

<div class='container my-5'>

  <div class='row mb-3'>
    <div class='col-md-3 offset-md-1'>

      <h4 class='bg-dark text-white text-center'>ログイン</h4>

      <p class="text-center">会員の方はこちらからログイン</p>

    </div>
  </div>

  <div class='row'>
    <div class='col-md-5 offset-md-1'>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <table class="table table-borderless">
      <tr>
        <div class="form-group">
          <th>メールアドレス</th>
            <td><%= f.email_field :email, autofocus: true, placeholder: "sample@sample.com", class: "form-control" %></td>
        </div>
      </tr>

      <tr>
        <div class="form-group">
          <th>パスワード</th>
            <td><%= f.password_field :password, autofocus: true, placeholder: "パスワード", class: "form-control" %></td>
        </div>
      </tr>

      <tr>
        <th></th>
          <td><%= f.submit "ログイン", class:"btn btn-primary w-100" %></td>
      </tr>
    </table>

    <% end %>

    </div>
  </div>

  <div class='row pt-5 mb-3'>
    <div class='col-md-4 offset-md-1'>

      <h4 class='bg-secondary text-white text-center'>会員登録がお済みでない⽅</h4>
      <p class="text-center"><%= link_to "こちら", new_customer_registration_path %>から新規登録を⾏ってください。</p>

    </div>
  </div>

</div>