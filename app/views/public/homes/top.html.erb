<!--TOPページ-->

<div class='container box'>
  <div class='row'>
    <div class='col align-self-center'>

　　　<h2 class='text-center text-white'>ようこそ、ながのCAKEへ！</h2>
      <p class='text-center text-white'
        このサイトは、ケーキ販売のECサイトになります。<br>
        会員でない⽅も商品の閲覧はできますが、<br>
        購⼊には会員登録が必要になります。<br>
      </p>

      <!--サンプルで画像入れました-->
      <div id='carouselExampleIndicators' class='carousel slide text-center' data-ride='carousel'>
        <ol class='carousel-indicators'>
          <li data-target='#carouselExampleIndicators' data-slide-to='0' class='active'></li>
          <li data-target='#carouselExampleIndicators' data-slide-to='1'></li>
          <li data-target='#carouselExampleIndicators' data-slide-to='2'></li>
          <li data-target='#carouselExampleIndicators' data-slide-to='3'></li>
          <li data-target='#carouselExampleIndicators' data-slide-to='4'></li>
          <li data-target='#carouselExampleIndicators' data-slide-to='5'></li>
          <li data-target='#carouselExampleIndicators' data-slide-to='6'></li>
        </ol>
        <div class='carousel-inner'>
          <div class='carousel-item active'>
            <%= image_tag 'cake1.jpg', width: '570px', height: '370px' %>
          </div>
          <div class='carousel-item'>
            <%= image_tag 'cake3.jpg', width: '570px', height: '370px' %>
          </div>
          <div class='carousel-item'>
            <%= image_tag 'cake4.jpg', width: '570px', height: '370px' %>
          </div>
          <div class='carousel-item'>
            <%= image_tag 'cake6.jpg', width: '570px', height: '370px' %>
          </div>
          <div class='carousel-item'>
            <%= image_tag 'cake7.jpg', width: '570px', height: '370px' %>
          </div>
          <div class='carousel-item'>
            <%= image_tag 'cake8.jpg', width: '570px', height: '370px' %>
          </div>
          <div class='carousel-item'>
            <%= image_tag 'cake9.webp', width: '570px', height: '370px' %>
          </div>
        </div>
        <a class='carousel-control-prev' href='#carouselExampleIndicators' role='button' data-slide='prev'>
          <span class='carousel-control-prev-icon' aria-hidden='true'></span>
          <span class='sr-only'>Previous</span>
        </a>
        <a class='carousel-control-next' href='#carouselExampleIndicators' role='button' data-slide='next'>
          <span class='carousel-control-next-icon' aria-hidden='true'></span>
          <span class='sr-only'>Next</span>
        </a>
      </div>
    </div>
  </div>
</div>


<!--新着商品-->
<div class='container my-5'>

  <div class='mb-3'>
      <h3 class='text-center'>新着商品</h3>
  </div>

  <div class='container'>
    <div class='row'>
      <% @products.each do |product| %>
        <div class='col-md-3'>
          <div class='card shadow'>
            <%= link_to product_path(product), class: 'no-underline', 'data-turbolinks': false do %>
              <%= attachment_image_tag(product, :image, width: '100%', height: '100%', fallback: 'no_image.jpg') %>
              <div class='card-body'>
                <h6 class='card-title'>
                  <%= product.name %>
                </h6>
                <p class='card-text'>
                  ¥<%= product.price %>
                </p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div style='text-align: right;'>
    <u>
      <%= link_to '全ての商品を見る >', products_path %>
    </u>
  </div>

</div>
