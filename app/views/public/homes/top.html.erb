<!--TOPページ-->

<div class='container'>
  <div class='row'>
    <div class='col align-self-center'>

      <p class='text-center'>
        ようこそ、<strong>ながのCAKE</strong>へ！<br>
        このサイトは、ケーキ販売のECサイトになります。<br>
        会員でない⽅も商品の閲覧はできますが、<br>
        購⼊には会員登録が必要になります。<br>
      </p>

      <!--サンプルで画像入れました-->
      <div class='text-center'>
        <%= image_tag 'cake1.jpg', width: '50%', height: '50%' %>
      </div>

    </div>
  </div>
</div>


<!--新着商品-->
<div class='container my-5'>

  <div class='row mb-3'>
      <h3>新着商品</h3>
  </div>

  <div class='row'>
    <% @products.each do |product| %>
    <table class='table-hover col-3'>

      <!--画像-->
      <tr>
        <td class='text-center'>
          <%= link_to product_path(product) do %>
            <%= attachment_image_tag(product, :image, size: '300x220', fallback: 'no_image.jpg') %>
          <% end %>
        </td>
      </tr>

      <!--商品名-->
      <tr>
        <td class='text-center'><%= product.name %></td>
      </tr>

      <!--値段-->
      <tr>
        <td class='text-center'>¥<%= product.price %></td>
      </tr>

    </table>
    <% end %>
  </div>

  <div style='text-align: right;'>
    <u>
      <%= link_to '全ての商品を見る >', products_path %>
    </u>
  </div>

</div>
