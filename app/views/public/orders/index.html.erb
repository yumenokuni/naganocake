<!--会員側注文履歴一覧ページ-->

<div class='container my-5'>

  <div class='row mb-3'>
    <div class='col-md-3 offset-md-1'>

      <h4 class='bg-dark text-white text-center p-3'>注文履歴一覧</h4>

    </div>
  </div>

  <div class='row'>
    <div class='col-md-10 offset-md-1'>

    <table class='table table-bordered table-hover'>
      <thead class='thead-dark'>
        <tr>
          <th class='text-center'>注文日</th>
          <th class='text-center'>配送先</th>
          <th class='text-center'>注文商品</th>
          <th class='text-center'>支払金額</th>
          <th class='text-center'>ステータス</th>
          <th class='text-center'>注文詳細</th>
        </tr>
      </thead>

      <tbody>
      <% @orders.each do |order| %>

        <tr>
          <td class='text-center'><%= order.created_at.strftime("%Y/%m/%d") %></td>
          <td class='text-center'>〒<%= order.postal_code %> <%= order.address %><br><%= order.name %> 様</td>

          <td class='text-center'>
            <% order.ordered_products.each do |prod| %>
              <%= prod.product.name %><br />
            <% end %>
          </td>

          <td class='text-center'><%= order.amount %>円</td>
          <td class='text-center'><%= order.order_status %></td>

          <td class='text-center'><%= link_to '表示する', order_path(order.id), class:"btn btn-primary" %></td>
        </tr>

      <% end %>
      </tbody>
    </table>

    </div>
  </div>

</div>