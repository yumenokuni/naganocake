<!--側注文詳細ページ-->

<div class="container mt-5">
  <div class="row mt-3">
    <div class="col-md-3">
      <h4 class="bg-dark text-white text-center">注文履歴詳細</h4>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-5">
      <div class="order-info">
        <table class="table-bordered">
          <p><strong>注文情報</strong></p>
         <% @orders.each do |order| %>
            <tr>
              <td>注文日</td>
              <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
            </tr>
            <tr>
               <td>配送先</td>
              <td>〒<%= order.postal_code %><br><%= order.address %><br><%= order.name %></td>
            </tr>
            <tr>
               <td>支払い方法</td>
               <td><%= order.payment %></td>
            </tr>
            <tr>
               <td>ステータス</td>
               <td><%= order.order_status %></td>
           
          <% end %>
        
        </table>
      </div>
    </div>
    <div class="col-md-5">
      <div class="payment-info">
        <table class="table-bordered">
          <p><strong>請求情報</strong></p>
           <tr>
            <td><strong>商品合計</strong></td>
            <td><%= @order.amount %></td>
          </tr>
          <tr>
            <td><strong>配送料</strong></td>
            <td><%= @ship.to_i %></td>
          </tr>
          <tr>
            <td><strong>ご請求額</strong></td>
            <td><strong><%= @order.amount + @ship.to_i %></strong></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-5">
      <div class="order-date">
        <table class="table-bordered">
          <p><strong>注文内容</strong></p>
          <thead>
            <tr class="table-secondary">
              <th>商品</th>
              <th>単価（税込）</th>
              <th>個数</th>
              <th>小計</th>
            </tr>
          </thead>
        　<tbody>
        　   <% @ordered_products.each do |prod| %>
        　     <tr>
        　       <td><%= prod.product.name %></td>
        　       <td><%= prod.taxed_price.to_i %></td>
        　       <td><%= prod.amount %></td>
        　     　<td><%= (prod.taxed_price.to_i).floor*prod.amount %></td>
        　     </tr>
        　   <% end %>
        　</tbody>
        </table>
      </div>
    </div>
  </div>
</div>