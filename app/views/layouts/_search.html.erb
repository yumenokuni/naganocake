  <!--検索窓-->

  <%= form_with url: search_path, method: :get, local: true do |f| %>

    <%= f.text_field 'search[value]', placeholder: 'キーワードを入力' %>
    <%= f.select 'search[model]', options_for_select([['Product','product'], ['Customer','customer']]) %>
    <%= f.select 'search[how]', options_for_select([['完全一致','match'], ['部分一致','partical'], ['前方一致','forward'], ['後方一致','backward']]) %>
    <%= f.submit '検索' , class: 'btn btn-secondary mb-2 btn-sm' %>

  <% end %>
