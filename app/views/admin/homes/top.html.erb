<div class='container'>
  <div class='row'>
    <div class='col-md-12'>

      <p class='title'>注文履歴一覧<p>
      <table class='table table-hover table-inverse table-borderless' >
        <thead>
          <tr style='background-color: #ffe6ca'>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order) %></td>
            <td><%= order.customer.last_name + order.customer.first_name %></td>
            <td><%= order.order_details.sum(:quantity) %></td>
            <td><%= order.buy_status_i18n %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>