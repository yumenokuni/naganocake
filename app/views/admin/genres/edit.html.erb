<!--管理者側ジャンルページ-->

<div class='container my-5'>

  <div class='row mb-5'>
    <div class='col-md-3 offset-md-1'>

      <h4 class='bg-dark text-white text-center p-3'>ジャンル編集</h4>

    </div>
  </div>

  <div class='row'>
    <div class='col-md-10 offset-md-1'>

     <%= form_with model: @genre,url:admin_genre_path(@genre),local:true do |f| %>
      <%= f.label :name, 'ジャンル名' %>
      <%= f.text_field :name %>
      <%= f.submit '変更を保存',class:'btn btn-success w-25' %>
     <% end %>

    </div>
  </div>

</div>