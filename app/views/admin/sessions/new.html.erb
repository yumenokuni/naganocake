<!--管理者ログインページ-->

<div class='container my-5'>
  <div class='row'>
    <div class='col-md-12'>

      <p class='title'>管理者ログイン</p>
        <%= form_with model: @admin, url: new_admin_session_path, local: true do |f| %>
          <div class='login-table'>
            <table class='table table-borderless'>
                <tr>
                  <td style='width:20%'><%= f.label :メールアドレス %></td>
                  <td><%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'sample@example.com', size: 50 %></td>
                </tr>
                <tr>
                  <td><%= f.label :パスワード %></td>
                  <td><%= f.password_field :password, autocomplete: 'current-password', size: 50 %></td>
                </tr>
                <tr>
                  <td></td>
                  <td><%= f.submit 'ログイン', class: 'btn btn-dark text-white w-25' %></td>
                </tr>
            </table>
          </div>
        <% end %>

    </div>
  </div>
</div>
