<h1>商品追加</h1>
<%= form_for(@product, url: admin_products_path, method: :post, class: "form-horizontal") do |f| %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品価格</h4>
  <%= f.text_field :price %>
  <h4>商品説明</h4>
  <%= f.text_area :introduction %>
  <%= f.submit '追加' %>
<% end %>