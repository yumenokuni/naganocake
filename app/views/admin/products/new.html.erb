<%= form_for(@product, url: admin_products_path(@product.id), method: :patch, class: "form-horizontal") do |f| %>
  <h2 class="text-center">新規商品追加</h2>
  <div class="col-sm-12 col-md-7 col-lg-5 px-5 px-sm-0 mx-auto">
    <div class="form-group">
      <%= f.label :"商品画像", class: "col-sm-3 control-label" %>
  　　<%= f.attachment_field :image, class: "col-sm-7" %>
    </div>
    <div class="form-group">
      <%= f.label :"商品名", class: "col-sm-4 control-label" %>
      <%= f.text_field :name, class: "col-sm-6 form-control-static name" %>
    </div>
    <div class="form-group">
      <%= f.label :"商品説明", class: "col-sm-4 control-label" %>
      <%= f.text_area :introduction, class: "col-sm-6 control-label introduction" %>
    </div>
    <div class="form-group">
      <%= f.label :"ジャンル", class: "col-sm-4 control-label" %>
      <%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "-- 選択してください --", class: "col-sm-9 genre_id") %>
    </div>
    <div class="form-group">
      <%= f.label :"税抜価格", class: "col-sm-4 control-label" %>
      <%= f.text_field :price, class: "col-sm-3 form-control-static price" %>円
    </div>
    <div class="form-group">
      <%= f.label :"販売ステータス", class: "col-sm-4 control-label" %>
      <%= f.select :is_active, [['販売中', true], ['販売停止', false]], prompt: "-- 選択してください --", class: "col-sm-9 is_active" %>
    </div>
      <%= f.submit '商品追加' %>
  </div>
<% end %>